<!ELEMENT wlogpost (userId, activity_date, text, place, activityType, activityId)>

<!ELEMENT userId (#PCDATA)>

<!ENTITY % date "year, month, day">
<!ELEMENT activity_date (%date;)>
<!ELEMENT year (#PCDATA)>
<!ELEMENT month (#PCDATA)>
<!ELEMENT day (#PCDATA)>

<!ELEMENT text (#PCDATA)>
<!ELEMENT place (#PCDATA)>

<!ELEMENT activityType (running, gym, swimming)>

<!ELEMENT activityId (#PCDATA)>

<!-- ACTIVITY TYPES -->
<!-- RUNNING -->
<!ELEMENT running (activityId, length, time)>
<!ELEMENT length (#PCDATA)>
<!ELEMENT time (#PCDATA)>

<!-- GYM -->
<!ELEMENT gym (activityId, exercise, weight, reps)>
<!ELEMENT exercise (#PCDATA)>
<!ELEMENT weight (#PCDATA)>
<!ELEMENT reps (#PCDATA)>

<!-- SWIMMING -->
<!ELEMENT swimming (activityId, length, time, stroke)>
<!ELEMENT stroke (#PCDATA)>